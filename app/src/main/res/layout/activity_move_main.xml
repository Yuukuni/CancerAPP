<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huangyuwei.myapplication.move.move_main">

    <ImageButton
        android:id="@+id/btn_exercise"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/move_exercise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/exercise_baseline"
        app:layout_constraintBottom_toBottomOf="@id/exercise_baseline"
        android:background="@null" />

    <ImageButton
        android:id="@+id/btn_rehab"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/move_rehab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rehab_baseline"
        app:layout_constraintBottom_toBottomOf="@id/rehab_baseline"
        android:background="@null" />

    <android.support.constraint.Guideline
        android:id="@+id/exercise_baseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/rehab_baseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

</android.support.constraint.ConstraintLayout>
